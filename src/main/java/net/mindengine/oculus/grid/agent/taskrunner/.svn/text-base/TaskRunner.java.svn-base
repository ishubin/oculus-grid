package net.mind_engine.oculus.testrunmanager.agent.taskrunner;

import java.util.Properties;

import net.mind_engine.oculus.testrunmanager.agent.TRMAgent;
import net.mind_engine.oculus.testrunmanager.domain.task.Task;
import net.mind_engine.oculus.testrunmanager.domain.task.TaskStatus;
import net.mind_engine.oculus.testrunmanager.domain.task.suite.SuiteTask;
import net.mind_engine.oculus.testrunmanager.service.exceptions.IncorrectTaskException;

/**
 * A thread which is used for running the specified task and obtaining the task
 * progress information. With each new task the task runner should be
 * instantiated with a corresponded class via {@link #createTaskRunner(Task)}
 * method.
 * 
 * @author Ivan Shubin
 * 
 */
public abstract class TaskRunner extends Thread {
	private Task task;
	private TaskStatus taskStatus;
	private Properties agentProperties;
	private TRMAgent agent;

	protected TaskRunner() {

	}

	public void setTask(Task task) {
		this.task = task;
	}

	public Task getTask() {
		return task;
	}

	public static TaskRunner createTaskRunner(Task task) throws IncorrectTaskException {
		TaskRunner taskRunner = null;
		if (task instanceof SuiteTask) {
			taskRunner = new SuiteTaskRunner();
		}
		if (taskRunner == null)
			throw new IncorrectTaskException();
		taskRunner.setTask(task);
		return taskRunner;
	}

	public void setTaskStatus(TaskStatus taskStatus) {
		this.taskStatus = taskStatus;
	}

	public TaskStatus getTaskStatus() {
		return taskStatus;
	}

	public void setAgentProperties(Properties agentProperties) {
		this.agentProperties = agentProperties;
	}

	public Properties getAgentProperties() {
		return agentProperties;
	}

	public void setAgent(TRMAgent agent) {
		this.agent = agent;
	}

	public TRMAgent getAgent() {
		return agent;
	}
}
